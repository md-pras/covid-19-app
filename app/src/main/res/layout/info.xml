<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="150dp"
		android:paddingLeft="8dp"
		android:paddingTop="12dp"
		android:paddingRight="8dp"
		android:paddingBottom="8dp"
		android:background="@drawable/img_1"
		android:gravity="right|top"
		android:orientation="horizontal"
		android:scaleY="1.15">
		<ImageView
			android:id="@+id/imageview10"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/globe_3"
			android:scaleType="centerCrop"
			android:scaleX="0.9"
			android:scaleY="0.75"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/linear2"
		android:layout_width="match_parent"
		android:layout_height="60dp"
		android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
		android:padding="8dp"
		android:background="#ECEFF1"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="horizontal"
		android:translationY="-30.0dp">
		<TextView
			android:id="@+id/textview1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="Info Terkini"
			android:textSize="20sp"
			android:textStyle="bold"
			android:textColor="#000000"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/linear11"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="10dp"
		android:paddingLeft="15dp"
		android:paddingRight="15dp"
		android:gravity="center_horizontal"
		android:orientation="horizontal"
		android:translationY="-20.0dp">
		<TextView
			android:id="@+id/textview6"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:gravity="center_horizontal"
			android:text="Dapatkan informasi terkini mengenai covid-19 dari sumber terpercaya."
			android:textSize="16sp"
			android:textColor="#000000"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/bg_indo"
		android:layout_width="match_parent"
		android:layout_height="150dp"
		android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
		android:layout_marginBottom="20dp"
		android:background="#1CC88A"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical"
		android:translationY="-20.0dp">
		<ImageView
			android:id="@+id/imageview4"
			android:layout_width="wrap_content"
			android:layout_height="120dp"
			android:src="@drawable/img_3"
			android:scaleType="center"/>
		<TextView
			android:id="@+id/textview4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Info terkini Indonesia"
			android:textSize="18sp"
			android:textColor="#ECEFF1"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/bg_global"
		android:layout_width="match_parent"
		android:layout_height="150dp"
		android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
		android:background="#36B9CC"
		android:gravity="center_horizontal|center_vertical"
		android:orientation="vertical"
		android:translationY="-20.0dp">
		<ImageView
			android:id="@+id/imageview5"
			android:layout_width="wrap_content"
			android:layout_height="120dp"
			android:src="@drawable/img_2"
			android:scaleType="centerCrop"/>
		<TextView
			android:id="@+id/textview5"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Info terkini global"
			android:textSize="18sp"
			android:textColor="#ECEFF1"/>
	</LinearLayout>
	<LinearLayout
		android:id="@+id/linear12"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="bottom"
		android:orientation="vertical">
		<LinearLayout
			android:id="@+id/linear13"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/linear14"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:background="#3584FB"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical"
				android:layout_weight="1">
				<ImageView
					android:id="@+id/imageview6"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/globe_4"
					android:scaleType="center"
					android:scaleX="0.8"
					android:scaleY="0.8"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear15"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:background="#3584FB"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="vertical"
				android:layout_weight="1">
				<ImageView
					android:id="@+id/imageview7"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/globe_1"
					android:scaleType="center"
					android:scaleX="0.8"
					android:scaleY="0.8"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/linear16"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:paddingTop="8dp"
				android:background="#4E73DF"
				android:gravity="center_horizontal"
				android:orientation="vertical"
				android:layout_weight="1">
				<ImageView
					android:id="@+id/imageview8"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/globe_2"
					android:scaleType="center"
					android:scaleX="0.8"
					android:scaleY="0.8"/>
				<ImageView
					android:id="@+id/line"
					android:layout_width="match_parent"
					android:layout_height="4dp"
					android:layout_marginTop="5dp"
					android:background="#FFFFFF"
					android:src="@drawable/line2"
					android:scaleType="center"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
